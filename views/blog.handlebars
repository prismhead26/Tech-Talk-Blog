
<!-- Display blog information -->
<h1>{{blog.title}}</h1>
<p>{{blog.body}}</p>
{{!-- /api/blogs/{{blog.id}} --}}
<!-- Update form -->
<form id="updateForm" action="/api/blogs/{{blog.id}}" method="PUT"></form>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{blog.title}}">
    <br>
    <label for="body">Body:</label>
    <textarea id="body" name="body">{{blog.body}}</textarea>
    <br>
    <input type="submit" value="Update">
</form>

<script>
    document.getElementById("updateForm").addEventListener("submit", function(event) {
        event.preventDefault(); // Prevent form submission

  const title = document.querySelector("#title").value.trim();
  const body = document
    .querySelector("#body")
    .value.trim();

        // Send AJAX request to update the blog
        fetch(event.target.action, {
            method: event.target.method,
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({title: title, body: body})
        })
        .then(response => {
            if (response.ok) {
                // Blog updated successfully
                alert("Blog updated successfully");
            } else {
                // Error updating blog
                alert("Error updating blog");
            }
        })
        .catch(error => {
            console.error("Error updating blog:", error);
        });
    });
</script>