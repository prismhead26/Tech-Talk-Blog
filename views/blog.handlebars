<!-- Display blog information -->
<h1>{{blog.title}}</h1>
<p>{{blog.body}}</p>

{{!-- /api/blogs/{{blog.id}} --}}
<!-- Update form -->
<form id="updateForm" data-id="{{blog.id}}">
    <label for="title">Title:</label>
    <input type="text" id="update-title" name="title" value="{{blog.title}}">
    <br>
    <label for="body">Body:</label>
    <textarea id="update-body" name="body">{{blog.body}}</textarea>
    <br>
    <button id="update-button" type="submit">Update</button>
</form>


<script src="/js/blog.js"></script>
