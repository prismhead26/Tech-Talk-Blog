    <div class="center">
        <button style="margin: 2.5rem;" onclick="toggleForm()">Create a new Blog</button>
    </div>
    <div id="create-form" class="create-forum content" style="display: none;">
        <form action="/api/blogs" method="POST">
            <label for="title">Give your blog a title:</label>
            <input type="text" id="title" name="title" required>
            <label for="body">Write your blog here:</label>
            <textarea id="body" name="body"></textarea>
            <button type="submit">Create</button>
        </form>
    </div>

    {{#if blogs.length}}
    <div class="blog-list">
            <h3 style="color: #ff9999; text-align: center; font-size: 2.5rem;">Current Blogs:</h3>
        {{/if}}
        {{#each blogs}}
            {{> blog-details}}
        {{/each}}
    </div>
    <script>
        function toggleForm() {
            var form = document.getElementById("create-form");
            if (form.style.display === "none") {
                form.style.display = "block";
            } else {
                form.style.display = "none";
            }
        }
    </script>
    <script src="./js/dashboard.js"></script>