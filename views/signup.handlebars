<div style="display: flex; flex-direction: column; justify-content: center;">
    <h2 style="text-align: center; font-size: 3rem;">Sign Up</h2>
    <form class="signup-form" style="background-color: aquamarine; margin-top: 2rem; display: inline-block; text-align: center;">
        <div class="form-group">
            <label for="name">Name:</label>
            <input style="margin-top: 2rem;" type="name" id="name" name="name" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="username">Username:</label>
            <input style="margin-top: 2rem;" type="text" id="username" name="username" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input style="margin-top: 2rem;" type="password" id="password" name="password" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password:</label>
            <input style="margin-top: 2rem;" type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary" style="margin: 3rem 0 1rem 0;">Sign Up</button>
    </form>
</div>

<script src="./js/signup.js"></script>